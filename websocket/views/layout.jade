doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    //-  The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags
    meta(name="description", content="")
    meta(name="author", content="")
    link(rel="icon", href="../../favicon.ico")
    title Dashboard Template for Bootstrap
    //- Bootstrap core CSS
    link(rel='stylesheet' href='/bootstrap/dist/css/bootstrap.min.css')
    link(rel='stylesheet' href='/bootstrap/dist/css/bootstrap-theme.min.css')
    link(rel='stylesheet' href='/font-awesome/css/font-awesome.min.css')
    //- Custom CSS
    link(rel='stylesheet' href='/stylesheets/main.css')
    link(rel='stylesheet' href='/stylesheets/dashboard.css')

  body
    nav.navbar.navbar-inverse.navbar-fixed-top
      .container-fluid
        .navbar-header
          button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#navbar", aria-expanded="false", aria-controls="navbar")
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href="#") Search
        #navbar.navbar-collapse.collapse
          ul.nav.navbar-nav.navbar-right
            li
              a(href="#") Dashboard
            li
              button.btn.btn-primary.btn-lg(type="button", data-toggle="modal", data-target=".bs-example-modal-lg") Settings
            li
              a(href="#") Profile
            li
              a(href="#") Help
          form.navbar-form.navbar-right
            input.form-control(type="text", placeholder="Search...")
    .modal.fade.bs-example-modal-lg(tabindex="-1", role="dialog", aria-labelledby="myLargeModalLabel")
      .modal-content
        .modal-header
          button.close(type="button", data-dismiss="modal", aria-label="Close")
            span(aria-hidden="true") &#215;
          h4#myLargeModalLabel.modal-title Large modal
        .modal-body
          | ...
    .container-fluid
      .row
        .col-sm-3.col-md-2.sidebar
          ul.nav.nav-sidebar
            li.active
              a(href="#")
                | Overview
                span.sr-only (current)
            li
              a(href="#") Controller List
            li
              a(href="#") Switch List
            li
              a(href="#") System Log
        .col-sm-9.col-sm-offset-3.col-md-10.col-md-offset-2.main
          h1.page-header Dashboard
          .row.placeholders
            .col-xs-6.col-sm-3.placeholder
              img.img-responsive(src="http://www.projectfloodlight.org/wp-content/uploads/2013/03/project_floodlight.png", width="200", height="200", alt="Generic placeholder thumbnail")
              h4 Floodlight
            .col-xs-6.col-sm-9.placeholder
              table.table.table-striped
                thead
                  tr
                    th IP/Port
                    th version
                    th Healthy
                    th Uptime
                tbody
                  tr
                    td 192.168.1.1/6633
                    td Version 1.0
                    td True
                    td 232s
              .row
                .col-md-2.text-left CPU
                .col-md-10
                  .progress
                    .progress-bar.progress-bar-success(role="progressbar", aria-valuenow="20", aria-valuemin="0", aria-valuemax="100", style="width: 28%")
                      | 28%
              .row
                .col-md-2.text-left Menory
                .col-md-10
                  .progress
                    .progress-bar.progress-bar(role="progressbar", aria-valuenow="20", aria-valuemin="0", aria-valuemax="100", style="width: 48%")
                      | 4.6G
              .row
                .col-md-6
                  .col-md-2.text-left Rx
                  .col-md-10
                    .progress
                      .progress-bar.progress-bar-warning(role="progressbar", aria-valuenow="20", aria-valuemin="0", aria-valuemax="100", style="width: 42%")
                        | 2.8Mbps
                .col-md-6
                  .col-md-2.text-left Tx
                  .col-md-10
                    .progress
                      .progress-bar.progress-bar-warning(role="progressbar", aria-valuenow="20", aria-valuemin="0", aria-valuemax="100", style="width: 6%")
                        | 0.09Mbps
      h2.sub-header Switch
      .table-responsive
        table.table.table-striped
          thead
            tr
              th #
              th IP
              th Openflow version
              th RTT
              th Packets
          tbody
            tr
              td 1
              td 192.168.1.1
              td 1.0/1.3
              td 23ms
              td 234


